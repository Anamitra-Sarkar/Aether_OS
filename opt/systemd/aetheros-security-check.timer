[Unit]
Description=Weekly AetherOS Security Update Check
Documentation=man:apt-get(8)

[Timer]
# Run weekly on Monday at 9:00 AM
OnCalendar=Mon *-*-* 09:00:00
# Add randomized delay up to 1 hour to avoid thundering herd
RandomizedDelaySec=3600
# Run on boot if last run was missed
Persistent=true

[Install]
WantedBy=timers.target
