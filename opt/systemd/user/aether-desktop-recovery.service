[Unit]
Description=AetherOS Desktop Recovery Event Handler
Documentation=man:aether-desktop-recovery(1)
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=oneshot
ExecStart=/usr/share/aetheros/scripts/aether-desktop-recovery handle-coredump

# Don't restart display manager
# Don't kill user applications
KillMode=process

[Install]
WantedBy=graphical-session.target
