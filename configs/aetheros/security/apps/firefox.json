{
  "name": "Firefox",
  "id": "firefox",
  "network": true,
  "camera": false,
  "microphone": false,
  "filesystem": "home",
  "apparmor_profile": "/etc/apparmor.d/firefox",
  "flatpak_app_id": "org.mozilla.firefox",
  "description": "Mozilla Firefox Web Browser",
  "permissions": {
    "network": {
      "enabled": true,
      "description": "Required for web browsing"
    },
    "camera": {
      "enabled": false,
      "description": "Disabled by default - enable for video calls"
    },
    "microphone": {
      "enabled": false,
      "description": "Disabled by default - enable for video calls"
    },
    "filesystem": {
      "mode": "home",
      "paths": [
        "$HOME",
        "$HOME/Downloads"
      ],
      "description": "Access to home directory and downloads"
    }
  }
}
